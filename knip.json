{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["src/index.ts"],
  "project": ["src/**/*.ts"],
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*",
    "scripts/**/*"
  ],
  "ignoreDependencies": [
    "typescript",
    "vitest",
    "knip"
  ],
  "rules": {
    "files": "error",
    "dependencies": "error",
    "devDependencies": "error",
    "exports": "error",
    "types": "error",
    "duplicates": "error",
    "unlisted": "error",
    "binaries": "error",
    "unresolved": "error"
  }
}